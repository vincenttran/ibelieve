	<meta name="viewport" content="width=device-width,initial-scale=1">

	{% include basekit.headScript %}
</head>
<body class="{{ page.backgroundClass }}">

	{% block content %}
	{% endblock %}

    {% include basekit.bodyScript %}


<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
<script>window.jQuery || document.write('<script src="{{ asset('libs/jquery-1.10.2.min.js')}}"><\/script>')</script>
<script class="cssdeck" src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>

    <!-- Nav Menu Script -->
    <script>
        // Toggles class open to display/hide the whole navigation
        $( ".navigation-toggle" ).click(function() {
            $( ".bk-extendednavigation" ).toggleClass( "open" );
        });
        // Togglse class open to display/hide folders
        $( ".navigation-item.folder" ).each(function() {
            $( this ).click(function() {
                $( this ).toggleClass( "open" );
            });
        });
    </script>

<!-- Resizing Header Script -->
    <script>
        var headerHeight = $('.fixed-header').height();
        var headerHandler = function () {

            $('.fixed-header-wrap').height(headerHeight);

            var scroll = getCurrentScroll();
            if ( scroll >= 1 ) {
                $('.fixed-header').addClass('shrink');
            }
            else
            {
                $('.fixed-header').removeClass('shrink');
                $('.fixed-header-wrap').height('auto');
            }

            function getCurrentScroll() {
                return window.pageYOffset || document.documentElement.scrollTop;
            }
        };

        headerHandler();
        $(document).ready(headerHandler);
        $(window).resize(headerHandler);
        $(window).scroll(headerHandler);

    </script>

</script>
</body>
</html>
